import options from "../../data/options.json";
---

<div class="flex flex-col gap-4">
	<h1 class="text-3xl">Solicitud de compra</h1>
	<form action="" method="post">
		<div class="flex flex-col gap-4">
			<div class="grid grid-cols-3 gap-x-8 gap-y-6 w-full">
				<div class="">
					<label for="request-name" class="block">Nombre de la Solicitud</label>
						<div class="mt-2">
							<div class="outline-1 outline-gray-200 -outline-offset-1 rounded-md flex items-center ">
								<input
									id="request-name"
									name="request-name"
									type="text"
									placeholder="Ingrese el nombre de Solicitud"
									class="pl-3 pr-3 py-1.5 block grow min-w-0 rounded-md"
								/>
							</div>
						</div>
				</div>
				<div class="">
					<label for="request-number" class="block">Número de Solicitud</label>
						<div class="mt-2">
							<div class="outline-1 outline-gray-200 -outline-offset-1 rounded-md flex items-center ">
								<input
									id="request-number"
									name="request-number"
									type="text"
									placeholder="Ingrese número de solicitud"
									class="pl-3 pr-3 py-1.5 block grow min-w-0 rounded-md"
								/>
							</div>
						</div>
				</div>
			</div>	
			<div class="grid grid-cols-3 gap-x-8 gap-y-6 w-full">
				<div class="client-name">
					<label for="" class="block">Nombre del cliente</label>
						<div class="mt-2">
							<div class="outline-1 outline-gray-200 -outline-offset-1 rounded-md flex items-center ">
								<input
									id="client-name"
									name="client-name"
									type="text"
									placeholder="Inckarri"
									class="pl-3 pr-3 py-1.5 block grow min-w-0 rounded-md"
								/>
							</div>
						</div>
				</div>
				<div class="">
					<label for="client-address" class="block">Dirección entrega</label>
						<div class="mt-2">
							<div class="outline-1 outline-gray-200 -outline-offset-1 rounded-md flex items-center ">
								<input
									id="client-address"
									name="client-address"
									type="text"
								placeholder="Ingrese Dirección de entrega"
									class="pl-3 pr-3 py-1.5 block grow min-w-0 rounded-md"
								/>
							</div>
						</div>
				</div>
				<div class="">
					<label for="client-category" class="block">Seleccione categoría</label>
						<div class="mt-2">
							<select 
								id="client-category"
								name="client-category"
								class="block w-full rounded-md border border-gray-300 py-1.5 pl-3 pr-10 text-gray-900 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 sm:text-sm"
							>
								<option disabled selected value=""> Seleccione una opción</option>
								{options.map((option) => (
									<option value={option.value}>{option.label}</option>
								))}
							</select>
						</div>
				</div>
				<div class="">
					<label for="client-required-date" class="block">Fecha requerida</label>
						<div class="mt-2">
							<div class="outline-1 outline-gray-200 -outline-offset-1 rounded-md flex items-center ">
								<input
									id="client-required-date"
									name="client-required-date"
									type="date"
									class="pl-3 pr-3 py-1.5 block grow min-w-0 rounded-md"
								/>
							</div>
						</div>
				</div>
				<div class="">
					<label for="client-deadline" class="block">Plazo para recibir respuesta</label>
						<div class="mt-2">
							<div class="outline-1 outline-gray-200 -outline-offset-1 rounded-md flex items-center ">
								<input
									id="client-deadline"
									name="client-deadline"
									type="date"
									class="pl-3 pr-3 py-1.5 block grow min-w-0 rounded-md"
								/>
							</div>
						</div>
				</div>
			</div>	
			<div class="grid gap-x-4">
				<div class="">
					<label for="about" class="block">Notas adicionales</label>
					<div class="mt-2">
						<textarea
							id="about"
							name="about"
							rows="3"
							class="block w-full rounded-md px-3 py-1.5 outline-1 -outline-offset-1 outline-gray-300"
						></textarea>
					</div><p class="text-gray-500 mt-3">Escriba todo lo que necesite del producto.</p>
				</div>
				<div class="">
					<label for="cover-photo" class="block">Documentos adjuntos</label>
					<div class="mt-2 flex justify-center rounded-lg border-2 border-dashed aik px-6 py-10">
						<div class="text-center">
							<svg
								xmlns="http://www.w3.org/2000/svg"
								viewBox="0 0 24 24"
								fill="currentColor"
								aria-hidden="true"
								data-slot="icon"
								class="mx-auto w-12 h-12 text-gray-300"
								><path
									fill-rule="evenodd"
									d="M1.5 6a2.25 2.25 0 0 1 2.25-2.25h16.5A2.25 2.25 0 0 1 22.5 6v12a2.25 2.25 0 0 1-2.25 2.25H3.75A2.25 2.25 0 0 1 1.5 18V6ZM3 16.06V18c0 .414.336.75.75.75h16.5A.75.75 0 0 0 21 18v-1.94l-2.69-2.689a1.5 1.5 0 0 0-2.12 0l-.88.879.97.97a.75.75 0 1 1-1.06 1.06l-5.16-5.159a1.5 1.5 0 0 0-2.12 0L3 16.061Zm10.125-7.81a1.125 1.125 0 1 1 2.25 0 1.125 1.125 0 0 1-2.25 0Z"
									clip-rule="evenodd">
								</path>
							</svg>
							<div class="mt-4 flex">
								<label
									for="file-upload"
									class="relative cursor-pointer rounded-md text-indigo-600"
									>
									<span>Agregar documentos</span>
									<input
										id="client-file"
										name="client-file"
										type="file"
										class="absolute w-1 h-1 p-0 -m-1 overflow-hidden whitespace-nowrap border-0"
									/>
									</label>
									<p class="pl-1">or drag and drop</p>
							</div>
							<p class="mt-3">PNG, JPG, GIF up to 10MB</p>
						</div>
					</div>
				</div>
			</div>
		</div>
    <button type="submit" class="mt-4 flex justify-end ml-auto px-4 py-2 rounded-lg border border-gray-300 hover:bg-gray-100 transition cursor-pointer">Enviar</button>
	</form>
</div>

